<resources>

    <!-- Base application theme. -->

    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorMaterialGreen</item>
        <item name="colorPrimaryDark">@color/colorMaterialGreenDark</item>
        <item name="colorAccent">@color/colorMaterialLightGreen</item>
        <item name="android:windowAnimationStyle">@style/CustomActivityAnimation</item>
    </style>

    <style name="PreviousTasksTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorMaterialRed</item>
        <item name="colorPrimaryDark">@color/colorMaterialRedDark</item>
        <item name="colorAccent">@color/colorMaterialRedLight</item>
        <item name="android:windowAnimationStyle">@style/CustomActivityAnimation</item>
    </style>

    <style name="UpcomingTasksTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorMaterialAmber</item>
        <item name="colorPrimaryDark">@color/colorMaterialAmberDark</item>
        <item name="colorAccent">@color/colorMaterialAmberLight</item>
        <item name="android:windowAnimationStyle">@style/CustomActivityAnimation</item>
    </style>

    <style name="DialogTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorMaterialGreen</item>
        <item name="colorPrimaryDark">@color/colorMaterialGreenDark</item>
        <item name="colorAccent">@color/colorMaterialLightGreen</item>

    </style>

    <style name="CustomActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_left</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>
    </style>

</resources>
